{
  "name": "web-component",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "ng": "ng",
    "clean:dist": "rimraf dist",
    "start": "run-s clean:dist start:microfrontends start:dev",
    "start:dev": "webpack-dev-server --env.development --watch-content-base --open",
    "start:dist": "node server.js",
    "start:microfrontends": "run-p start:microfrontend4 start:microfrontend1",
    "start:microfrontend1": "cd microfrontend1 && npm run build",
    "start:microfrontend2": "cd microfrontend2 && webpack --config webpack.dev.js",
    "start:microfrontend3": "cd microfrontend3 && webpack --config webpack.dev.js",
    "start:microfrontend4": "cd microfrontend4 && npm run build",
    "build": "run-s clean:dist build:prod build:microfrontends",
    "build:prod": "webpack --env.production",
    "build:prod:microfrontends": "run-p build:prod:microfrontend1 build:prod:microfrontend2 build:prod:microfrontend3",
    "build:prod:microfrontend1": "cd microfrontend1 && npm install && webpack --config webpack.prod.js",
    "build:prod:microfrontend2": "cd microfrontend2 && npm install && webpack --config webpack.prod.js",
    "build:prod:microfrontend3": "cd microfrontend3 && npm install && webpack --config webpack.prod.js",
    "build:prod:microfrontend4": "cd microfrontend4 && npm install && npm run build",
    "deploy": "git push origin :gh-pages && git subtree push --prefix dist origin gh-pages",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "http-server": "^0.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.32",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.32",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.32",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.32",
    "@babel/preset-env": "^7.0.0-beta.32",
    "@babel/preset-react": "^7.0.0-beta.32",
    "@babel/runtime": "^7.0.0-beta.32",
    "babel-loader": "^8.0.0-beta.0",
    "express": "^4.16.3",
    "html-webpack-plugin": "^2.30.1",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4",
    "webpack-merge": "^4.1.2"
  }
}
